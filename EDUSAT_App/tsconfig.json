{
    "include": [
        "src/**/*",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "target": "ESNext",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "incremental": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    }
}
